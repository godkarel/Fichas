                table.insert(lista, node.NomeDoOponenteVez)  -- Adiciona o valor do campo NomeDoOponenteVez √† lista
            end
        end

        -- Ordena a lista em ordem alfab√©tica
        table.sort(lista)

        -- Concatena todos os itens da lista em uma √∫nica string
        local listaStr = ""
        for i, item in ipairs(lista) do
            listaStr = listaStr .. "Item " .. i .. ": " .. tostring(item) .. "\n"
