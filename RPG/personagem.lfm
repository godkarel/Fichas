					if sheet.Deuses == 'Hidarnes' then
						sheet.DForca = 0;
						sheet.DInteligencia = 0;
						sheet.DDestreza	= 0;
						sheet.DAgilidade = (tonumber(sheet.LVDivino) or 0);
						sheet.DVitalidade = (tonumber(sheet.LVDivino) or 0) + 1;
						sheet.DMP = 0;
					end;	
				</event>
			</dataLink>
